<div class="container" >
		<div class="formDaftar">
			<h2>Reset Password</h2><br/>
			<%= form_tag do%>

				<div class="form-group">
					<%= label_tag :Username %>
					<%= text_field_tag :username, nil, class:'form-control' %>
				</div>

				<div class="form-group">
					<%= label_tag :Password_Baru %>
					<%= password_field_tag :password, nil, class:'form-control', required: true %>
				</div>

				<%= submit_tag "Simpan", class:'btn btn-primary' %>
				<%= link_to "Batal", home_path, class:'btn btn-danger' %>
				
				<div style="float: right">
					<%= button_tag "Reset", type: :reset, class:'btn btn-light' %>
				</div>
			<% end %>
		</div>
</div>
