<div class="container">
<% if user = current_teacher %>
	<div id="print">
		<% siswa = User.find_by(noinduk: params[:noinduk]) %>
		<h3>Grades For <%= siswa.nama %>  </h3>
		<h5>Jurusan : <%= siswa.jurusan %> </h5>
		<% x = siswa.noinduk %>
		<%= link_to 'Cetak', PrintM_path(x), target: :_blank, style: 'float: right', class: 'btn btn-dark'%>
		<table class="table table-striped">
		    <thead>
		      <tr>
		        <th>Mata Pelajaran</th>
		        <th>Score</th>
		      </tr>
		    </thead>
		    <tbody>
		      	<% total=0; @nilai.each do |f| %>
		      	<tr>
			        <td><%= f.mapel %></td>
			        <td><%= x = f.totnilai %></td>
		       	</tr>
		       	<% total+=x end %>
		       	<tr>
		       		<td><b>Total</b></td>
		       		<td><%= total %></td>
		       	</tr>
		    </tbody>
		</table>
	</div>

<% else %>
	<h3>Opps !!</h3>
<% end %>
</div>