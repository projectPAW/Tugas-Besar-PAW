<div class="container" >
	<% if teacher = current_teacher %>
		<div class="formDaftar">
			<% flash.each do |type, message| %>
				<p class="alert alert-success alert-dismissable fade show"><a href="/loginguru" style="float: right">
				login</a>
				<strong>Success!</strong><%=message%></p>
			<%end%>
			
			<h2>Edit Data Guru</h2><br/>

			<%= form_for(@teacher, url: {action: "update"}, method: "post") do |f| %>
				<div class="form-group">
					<%= f.label :NIP %>
					<%= f.number_field :nip, class:'form-control', required: true %>
				</div>
				<div class="form-group">
					<%= f.label :Nama %>
					<%= f.text_field :nama, class:'form-control', required: true %>
				</div>

				<div class="form-group">
					<%= f.label :Jenis_Kelamin %>
					
					<div class="radio">
						<%= f.radio_button :jenkel, "laki-laki", required: true %><label style="margin-left: 5px">Laki-laki</label>
					</div>
					<div class="radio">
						<%= f.radio_button :jenkel, "Perempuan", required: true %><label style="margin-left: 5px">Perempuan</label>
					</div>
				</div>

				<div class="form-group">
					<%= f.label :Mata_Pelajaran %><br>
					<%= f.select :mapel, options_for_select(@dfMapel) ,class:'form-control',required: true%>
				</div>

				<%= f.submit "Simpan", class:'btn btn-primary' %>
				<%= link_to "Batal", settingGuru_path, class:'btn btn-danger' %>
				
				<div style="float: right">
					<%= button_tag "Reset", type: :reset, class:'btn btn-light' %>
				</div>
			<% end %>
		</div>
	<% else %>
		<h3>Opps!!</h3>
	<% end %>
</div>