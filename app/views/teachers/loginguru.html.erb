<div class="container" align="center">
    <% if user = current_teacher %>
        <h3>Jangan lupa logout dulu <a href="dashboardguru"><%= user.nama %></a></h3>
    <% else %>
        <div class="formDaftar">
            <div class="form-group">
            <%=form_tag do %>
                <%= text_field_tag :username, nil, placeholder: 'username', class: 'form-control', required: true %>
                          </div>
                      
                <div class="form-group">
                    <%= password_field_tag :password, nil, placeholder: '**********', class: 'form-control', required: true%>
                </div>

                <div class="form-group">
                    <%= submit_tag "Masuk", class:"btn btn-block btn-custom-green" %>
                </div>
            <% end %>
              
            <div class="text-center">
              <a href="daftarguru">Daftar</a>
            </div>
            <div class="text-center">
              <a href="#">Lupa Password</a>
            </div>
        </div>
    <% end %>
</div>